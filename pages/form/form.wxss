.vertical{
  vertical-align:middle;
}
.tip-box{
width:70vw;
text-align:center;
border-radius:20rpx;
position:absolute;
left:50%;
    transform: translate3d(-50%,-350%,0);
background-color:#f40552;
padding:10rpx;
box-shadow:0 0 30px #f40552;
border:1px solid #f0f0f0;
border:2px solid #f40552;
color:white;
z-index:200;

}

.tip-box-animation{
  animation-name: tip;
animation-duration: 6s;
animation-fill-mode: forwards;
}
@keyframes tip{
  0%{
    transform: translate3d(-50%,-350%,0)
  }
  50%{
    transform: translate3d(-50%,0,0)
  }
  100%{
    transform: translate3d(-50%,-350%,0)
  }
}
.form-tip{
  margin-top: 25rpx;
  font-size: 25rpx;
  text-align: center;
  color: gray;
}
.form-Box{
  z-index: 100;
  position: relative;
}
.form-box{
  width: 80vw;
  /* box-shadow: 0px 0px 30px #f9f6f7; */
  box-shadow: 5px 5px 30px #f0f0f0;
  border-radius: 25rpx;
  min-height: 80rpx;
  margin: 50rpx auto;
}
.form-box input{
  margin-left: 5rpx;
}

.sex-label{
  font-size: 30rpx;
