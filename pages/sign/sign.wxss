.sign-icon{
  margin-top: 50rpx;
  font-size: 50rpx;
}

.sign-tip{
    z-index: 50;
  position: absolute;
  width: 90vw;
  left: 50%;
  transform: translateX(-50%);
  bottom: 10vh;
  height: 60rpx;
  line-height: 0rpx;
  border-radius: 50rpx;

}
.sign-box:active{
  opacity: 0.5;
}

.loading-tip{
  line-height: 6em;
}

.circle1{
  z-index: 0;
  width: 70vw;
  height: 70vw;
