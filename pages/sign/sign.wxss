.sign-box{
  width: 40vw;
  height: 40vw;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate3d(-50%,-50%,0);
  border-radius: 50%;
  padding-top: 75rpx;
  z-index: 100;
}

.other-sign-box1,
.other-sign-box2,
.other-sign-box3,
.other-sign-box4,
.other-sign-box5,
.other-sign-box6{
  z-index: 50;
  position: absolute;
  opacity: 0.95;
  border-radius: 50%;
  padding-top: 75rpx;
}
.other-sign-box1{
    width: 35vw;
  height: 35vw;
    left: 50%;
  top: 50%;
  background-image: linear-gradient(to top, #fbc2eb 0%, #a6c1ee 100%);

}

