.container{
  height: 100vh;
  background: #ecf0f3;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  justify-content: space-around;
}


    .book {
      position: relative;
      flex-basis: 35%;
        /* width: 200rpx; */
        height: 300rpx;
        background: #ecf0f3;
        border-radius: 10rpx;
        box-shadow: 18px 18px 30px #d1d9e6, -18px -18px 30px #fff;
    }

    .txt-box{
      width: 90%;
      position: absolute;
      text-align: center;
      top: 50%;
      left: 50%;
      transform: translate3d(-50%,-50%,0);
    }

    .book .title{
      text-align: center;
      font-size: 30rpx;
      color: #69606b;
    }

    .book .author{
      /* text-align: center; */
      position: absolute;
      bottom: 5rpx;
      left: 50%;
      transform: translateX(-50%);
      color: gray;
    }

    .book text{
      color: #617be3;
      font-size: 60rpx;
      text-align: center;
      display: block;
      margin-top: 25rpx;
    }

